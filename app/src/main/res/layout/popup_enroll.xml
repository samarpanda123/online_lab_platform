<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/popup_layout"

    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter Teacher and Subject Details to Enroll"
        android:background="@color/purple_200"
        android:gravity="center"
        android:textSize="30dp"
        android:layout_marginBottom="30dp"/>




    <EditText
        android:id="@+id/teachername"
        android:layout_marginLeft="15sp"
        android:layout_marginRight="15sp"
        android:paddingLeft="10sp"
        android:drawableLeft="@drawable/ic_profile_user"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:height="60sp"
        android:hint="     Enter Teacher Name"
        android:background="@drawable/rect_box"
        />
    <EditText
        android:id="@+id/subject"
        android:layout_marginLeft="15sp"
        android:layout_marginRight="15sp"
        android:paddingLeft="10sp"
        android:drawableLeft="@drawable/ic_profile_user"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:height="60sp"
        android:hint="     Enter Subject Name"
        android:background="@drawable/rect_box"
        />

    <EditText
        android:id="@+id/teacherid"
        android:layout_marginLeft="15sp"
        android:layout_marginRight="15sp"
        android:paddingLeft="10sp"
        android:drawableLeft="@drawable/ic_profile_user"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:height="60sp"
        android:hint="     Enter Teacher's Unique Id"
        android:background="@drawable/rect_box"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >


    </LinearLayout>


</LinearLayout>