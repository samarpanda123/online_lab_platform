    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="60sp"
                android:fontFamily="@font/aclonica"
                android:padding="10sp"
                android:text="Category"
                android:textAllCaps="true"
                android:textSize="30sp" />



        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="20sp"
            android:layout_marginLeft="20sp"
            android:layout_marginRight="20sp"
            app:cardElevation="6dp"
            app:cardCornerRadius="24dp"

            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:background="@drawable/card_gradient">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_undraw_content_creator_re_pt5b"
                    android:layout_gravity="center"

                    />

                <RelativeLayout

                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:gravity="center"
                    >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="40sp"
                        android:text="Lab Marks"
                        android:fontFamily="@font/arbutus_slab"
                        android:textColor="#ffff"
                        android:textSize="20dp"
                        android:gravity="center"
                        android:id="@+id/lab_marks1"
                        />





                </RelativeLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="20sp"
            android:layout_marginLeft="20sp"
            android:layout_marginRight="20sp"
            app:cardElevation="6dp"
            app:cardCornerRadius="24dp"

            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:background="@drawable/card_gradient">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_undraw_questions_re_1fy7"
                    android:layout_gravity="center"

                    />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="120dp"
                            android:gravity="center"

                            >

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="40sp"
                                android:text="Ask Q/A"
                                android:fontFamily="@font/arbutus_slab"
                                android:textColor="#ffff"
                                android:textSize="20dp"
                                android:gravity="center"
                                android:id="@+id/ask_qad"
                                />





                        </RelativeLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="20sp"
            android:layout_marginLeft="20sp"
            android:layout_marginRight="20sp"
            app:cardElevation="6dp"
            app:cardCornerRadius="24dp"

            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:background="@drawable/card_gradient">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_join_lab_test"
                    android:layout_gravity="center"

                    />

                <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:gravity="center"

                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40sp"
                    android:text="Join Lab Test"
                    android:fontFamily="@font/arbutus_slab"
                    android:textColor="#ffff"
                    android:textSize="20dp"
                    android:gravity="center"
                    android:id="@+id/lab_test1"
                    />

            </RelativeLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>



        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="20sp"
            android:layout_marginLeft="20sp"
            android:layout_marginRight="20sp"
            app:cardElevation="6dp"
            app:cardCornerRadius="24dp"

            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:background="@drawable/card_gradient">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_undraw_approve_qwp7"
                    android:layout_gravity="center"
                    />

                <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:gravity="center"

                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40sp"
                    android:fontFamily="@font/arbutus_slab"
                    android:gravity="center"
                    android:text="Submit Assignment"
                    android:textColor="#ffff"
                    android:textSize="20dp"
                    android:id="@+id/lab_assign1"
                    />


            </RelativeLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="20sp"
            android:layout_marginLeft="20sp"
            android:layout_marginRight="20sp"
            app:cardElevation="6dp"
            app:cardCornerRadius="24dp"

            >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:background="@drawable/card_gradient">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_see_notice"
                android:layout_gravity="center"

                />

            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginTop="8sp"
                android:gravity="center"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40sp"
                    android:fontFamily="@font/arbutus_slab"
                    android:gravity="center"
                    android:text="Check Notice"
                    android:textColor="#ffff"
                    android:textSize="20dp"
                    android:id="@+id/notice1"
                    />

            </RelativeLayout>

        </LinearLayout>

        </androidx.cardview.widget.CardView>


        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</RelativeLayout>
<com.google.android.material.navigation.NavigationView
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:id="@+id/nav_bar1"
    app:headerLayout="@layout/student_header"
    app:menu="@menu/student_menu"
    android:layout_gravity="start"

    />

</androidx.drawerlayout.widget.DrawerLayout>

