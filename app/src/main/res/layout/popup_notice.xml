<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/popup_layout"

    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Publish Notice"
        android:background="@color/purple_200"
        android:gravity="center"
        android:textSize="30dp"
        android:layout_marginBottom="30dp"/>
    <EditText
        android:id="@+id/published_by"
        android:layout_marginLeft="15sp"
        android:layout_marginRight="15sp"
        android:paddingLeft="10sp"
        android:drawableLeft="@drawable/ic_profile_user"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:height="60sp"
        android:hint="     Published By"
        android:background="@drawable/rect_box"
        />
    <EditText
        android:id="@+id/published_for"
        android:layout_marginLeft="15sp"
        android:layout_marginRight="15sp"
        android:paddingLeft="10sp"
        android:drawableLeft="@drawable/ic_profile_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:height="60sp"
        android:hint="     Published for"
        android:background="@drawable/rect_box"
        />

    <EditText
        android:id="@+id/notice"
        android:layout_marginLeft="15sp"
        android:layout_marginRight="15sp"
        android:paddingLeft="10sp"
        android:drawableLeft="@drawable/ic_profile_user"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:height="60sp"
        android:hint="     Enter Notice"
        android:background="@drawable/rect_box"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >


    </LinearLayout>


</LinearLayout>