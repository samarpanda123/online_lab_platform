<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        tools:context=".Forgot_passwd">

        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:title="Forgot Password"
            android:id="@+id/toolbar"
            android:background="@color/purple_200"
            app:titleTextColor="@color/white"
            />


        <ImageView
            android:layout_marginTop="20sp"
            android:layout_width="200dp"
            android:layout_height="250dp"
            android:src="@drawable/forgot_password"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20sp"
            android:layout_marginBottom="20sp"
            android:text="Enter Registered Email"
            android:textSize="30sp"
            android:textColor="#118CC5"
            android:layout_marginLeft="20sp"
            android:layout_marginRight="20sp"
            />

        <EditText
            android:id="@+id/forgot_pass"
            android:layout_marginLeft="20sp"
            android:layout_marginRight="20sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="30sp"
            android:height="40sp"
            android:hint="Enter Email"
            android:textSize="15sp"
            android:background="@drawable/rect_box"

            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20sp"
            android:paddingTop="3sp"
            android:paddingBottom="3sp"
            android:paddingLeft="5sp"
            android:paddingRight="5sp"
            android:text="An OTP is send to your registered email ID. From there copy it and paste it in the 'verification code' box
given below."
            android:layout_marginTop="5dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/messagebox"

            />

        <Button
            android:id="@+id/submit_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20sp"

            android:layout_marginLeft="70dp"
            android:layout_marginRight="70dp"
            android:layout_marginBottom="50sp"
            android:gravity="center"
            android:background="@drawable/button"
            android:text="Submit"
            android:textAllCaps="false"
            android:textSize="20sp"

            />









    </LinearLayout>

</ScrollView>